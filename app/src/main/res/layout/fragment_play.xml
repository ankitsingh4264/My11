        <TextView
            android:id="@+id/text_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="choose 3 players"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="13sp">

        </TextView>
       <params.com.stepprogressview.StepProgressView
           android:id="@+id/step_progress"
        android:layout_width="wrap_content"
           android:layout_height="10dp"
           app:markers="1,2,3"
        app:totalProgress="3"
        app:currentProgress="3"
        app:markerWidth="2dp"
        app:textMargin="5dp"
        app:textSize="12sp"
        app:markerColor="@android:color/white"
           android:layout_marginTop="10dp"
           android:layout_below="@id/text_choose"
